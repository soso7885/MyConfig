"* use dark background *
set t_Co=256
set background=dark

"* enable rower *
set cursorline

"* use UTF-8 *
set enc=utf8
set fileencodings=utf-8,cp950

"* marked the keyword *
set hls

"* disable mouse under insert mode*
set mouse=nv

"* display line number *
"set number

"* ignore capital letter while searching *
set ic

"* the indent tap *
set tabstop=4
set shiftwidth=4

"* disable auto-indent *
set noautoindent

"* paste mode setting *
set pastetoggle=<F12>

syntax on

"* vim folding *
set foldmarker={{{,}}}
set foldmethod=marker
set foldlevel=0
let php_folding = 1 
set foldnestmax=3 

set confirm
set history=100

set statusline=%4*%<\%m%<[%f\%r%h%w]\ [%{&ff},%{&fileencoding},%Y]%=\[Position=%l,%v,%p%%]
colorscheme torte
autocmd Filetype gitcommit setlocal spell textwidth=72

set statusline+=%#warningmsg#
set statusline+=%*

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 0
let g:syntastic_check_on_wq = 0

" ==================================
" ===                            ===
" === Vundle plugin install tool ===
" ===                            ===
" ==================================
set nocompatible              " be iMproved, required
filetype off                  " required

"* set the runtime path to include Vundle and initialize *
set rtp+=~/.vim/bundle/Vundle.vim
" =================== vundle pluging start ====================
call vundle#begin()

"* The Vundle *
Plugin 'VundleVim/Vundle.vim'

"* The airline plugin *
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'

"* The NERD tree plugin *
Plugin 'scrooloose/nerdtree'

"* The tagbar *
Plugin 'majutsushi/tagbar'

"* The vim-go *
Plugin 'fatih/vim-go'

call vundle#end()
" ==================== vundle pluging end --====================

filetype on

"* The TagBar plugin on F9 *
nmap <f9> :TagbarToggle<CR>
let g:tagbar_left=1 "leftside
let g:tagbar_width=20 "width=25

"* TO_DO & FIX_ME list *
command Todo noautocmd vimgrep /TODO\|FIXME/j ** | cw

"* The NERDtree plugin on F8 *
map <f8> :NERDTreeToggle<CR>

"* Go highlight *
let g:go_highlight_functions = 1
let g:go_highlight_methods = 1
let g:go_highlight_structs = 1
let g:go_highlight_operators = 1
let g:go_highlight_build_constraints = 1

"* Go hotkey *
au FileType go nmap <leader>r <Plug>(go-run)
au FileType go nmap <leader>b <Plug>(go-build)
au FileType go nmap <leader>t <Plug>(go-test)
au FileType go nmap <leader>c <Plug>(go-coverage)






